
<GravacaoWindow>:
    MDBottomNavigation:
        panel_color: "#009688"
        text_color_normal: 0, 0, 0, 1
        text_color_active: 0, 0, 0, 1
        
        MDBottomNavigationItem:
            name: 'home'
            text: 'Home'   
            icon: 'home'
            on_tab_press: root.manager.current = 'main_screen'  
     
   
        MDBottomNavigationItem:
            name: 'historico'
            text: 'Histórico'
            icon: 'folder'
            on_tab_press: root.manager.current = 'historico_screen'  

        MDBottomNavigationItem:
            name: 'setting'
            text: 'PACIENTES'
            icon: 'account-box-multiple'
            on_tab_press: root.manager.current = 'novo_screen'


    MDFloatLayout:
        MDTopAppBar:
            title: "Prontuario"
            pos_hint: {"top": 1}
            elevation: 10
            right_action_items: [["wifi", lambda x: app.check_internet(x), "Checar conexão"]]

        MDFillRoundFlatButton:
            text: "iniciar gravação"
            font_size: 12
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            on_press: 
                root.ativa_spinner()
                app.start_recording()
        
        MDFillRoundFlatButton:
            text: "parar gravação"
            font_size: 12
            pos_hint: {"center_x": 0.5, "center_y":0.6}
            on_press: 
                app.stop() 
                root.desativa_spinner()
                app.save("audio.wav") 
                app.audio_prep("audio.wav") 

        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .5, 'center_y': .36}
            active: False
