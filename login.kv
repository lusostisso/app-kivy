#:include my.kv
<LoginWindow>:
    MDFloatLayout:
        Image:
            source: 'logo.png'
            allow_stretch: True
            size_hint: 0.3,0.3
            pos_hint:{'center_x':0.5, 'center_y': 0.85}

        MDLabel:
            id: subtitulo_label
            text: "VOICE MEDICAL RECORD"
            font_size: 15
            pos_hint:{'center_x':0.5, 'center_y': 0.7}
            halign: 'center'


        MDTextField:
            id: user
            hint_text: "Número de matrícula"
            icon_right: "account"
            size_hint_x: 0.9
            font_size: 18
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            on_text:
                root.set_enfermeiro(self.text)

        MDTextField:
            id: password
            hint_text: "Senha"
            icon_right: "eye-off"
            size_hint_x: 0.9
            font_size: 18
            pos_hint: {"center_x": 0.5, "center_y":0.45}
            password:True
            on_text:
                root.on_senha(self.text)


        Label:
            id: campo_vazio
            font_size: 12
            text:""
            pos_hint: {'center_x': 0.5, "center_y":0.35}

        MDFillRoundFlatButton:
            text: "LOGIN"
            font_size: 12
            width: 100
            md_bg_color: "#13c465"
            pos_hint: {"center_x": 0.5, 'center_y':0.2}
            on_release: root.verifica()


        MDFillRoundFlatButton:
            text: "LIMPAR"
            font_size: 12
            md_bg_color: "#b0bec5"
            pos_hint: {"center_x": 0.5, 'center_y':0.1}
            on_press:
                user.text = ""
                password.text = ""
