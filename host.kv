<Host>:
    MDBottomNavigation:
        panel_color: "#009688"
        text_color_normal: 0, 0, 0, 1
        text_color_active: 0, 0, 0, 1
        

        MDBottomNavigationItem:
            name: 'home'
            text: 'Home'   
            icon:'home'
            on_tab_press: root.manager.current = 'main_screen'  
     
   
        MDBottomNavigationItem:
            name: 'historico'
            text: 'Histórico'
            icon:'folder'
            on_tab_press: root.manager.current = 'historico_screen'  

        MDBottomNavigationItem:
            name: 'setting'
            text: 'PACIENTES'
            icon: 'account-box-multiple'
            on_tab_press: root.manager.current = 'novo_screen'

    MDTopAppBar:
        title: "Nuvem"
        pos_hint: {"top": 1}
        elevation: 10
        right_action_items: [["wifi", lambda x: app.check_internet(x), "Checar conexão"]]

    MDFloatingActionButton:
        icon: "plus"
        md_bg_color: app.theme_cls.primary_color
        type: 'standard'
        pos_hint: {"center_x": 0.5, "center_y":0.16}
        on_release: root.manager.current = 'novo_screen'
    Label:
        text: "Para o futuro"